\section{Features}
\begin{description}
\item[auto-spaced units]
	\[20\unit{\frac{V}{m^2}}\]
\item[Integral macro]
	\[\integral[inf]{f(x)}{x}{l}\]
\item[Summation macro]
	\[\summ[inf]{x[k]}{k}{n}\]
\item[Derivative macro]
	\[\deriv{y}{x}{2}\]
\item[Recursive macros]
	\[\integral[inf]{f(x) \summ[inf]{n} g[n]}{x}\]
\item[Simple replacements] \hfill
	\begin{description}
	\item[Left arrow] $ <-- $
	\item[Right arrow] $-->$
	\item[Thick left arrow] $<==$
	\item[Thick right arrow] $==>$
	\item[Bidirectional arrow] $<-->$
	\item[Thick bidirectional arrow] $<==>$
	\item[Greater than] $>=$
	\item[Less than] $<=$
	\item[Not equals] $!=$
	\end{description}
\end{description}

